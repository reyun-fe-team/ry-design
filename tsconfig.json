{
  "compilerOptions": {
    "target": "es5",
    //"lib": ["es6", "dom"],
    // "experimentalDecorators": true,
    // "moduleResolution": "node",
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "sourceMap": true,
    // "baseUrl": ".",
    //
    //"target": "esnext",
    "checkJs": false,
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    // 新增
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "webpack-env",
      // 新增
      // "umy-ui"
    ],
    "paths": {
      "@src": [
        "src/*"
      ]
    },
    "lib": [
      "es6",
      "esnext",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}